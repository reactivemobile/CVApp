<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:padding="@dimen/list_item_padding"
             android:layout_marginLeft="@dimen/activity_vertical_margin"
             android:layout_marginRight="@dimen/activity_vertical_margin"
             android:stretchColumns="*"
             android:shrinkColumns="*"
             android:layout_height="wrap_content">

    <TableRow>
        <TextView android:text="@string/name" style="@style/TextAppearance.AppCompat.Medium"/>
        <TextView android:id="@+id/company" style="@style/TextAppearance.AppCompat.Medium"/>
    </TableRow>
    <TableRow>
        <TextView android:text="@string/date"/>
        <TextView android:id="@+id/dates"/>
    </TableRow>
    <TableRow>
        <TextView android:text="@string/position"/>
        <TextView android:id="@+id/position"/>
    </TableRow>
    <TableRow>
        <TextView android:text="@string/website"/>
        <TextView android:id="@+id/website"/>
    </TableRow>
    <TableRow>
        <TextView android:text="@string/summary"/>
        <TextView android:id="@+id/summary"/>
    </TableRow>
</TableLayout>
